        "moduleResolution":"Node",
       // "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": false,
        "baseUrl": "./", 
        "rootDirs": ["./src/main/webroot/"],
        "outDir": "target/classes/webroot/",
      //  "explainFiles" : true,
      //  "listEmittedFiles":true,

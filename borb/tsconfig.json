{
    "compilerOptions": {
        "module": "ES2020",
        "target": "ES2020",
        "moduleResolution":"Node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "strict": false,
        "baseUrl": "./", 
        "rootDir": "./src/",
        "outDir": "dist",
        "declaration": true,
        "explainFiles" : true,
        "listEmittedFiles":true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["test/**/*.ts",
        "node_modules"
    ],
    "ts-node": {
        "logError": false,
        "compilerOptions": {"module": "ES2020"}
    }
}

